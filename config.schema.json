{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuration Schema",
  "type": "object",
  "properties": {
    "general": {
      "type": "object",
      "properties": {
        "prefix": { "type": "string" },
        "adminRole": { "type": "string" },
        "modRole": { "type": "string" },
        "guildId": { "type": "string" }
      },
      "additionalProperties": true
    },
    "entry": {
      "type": "object",
      "properties": {
        "welcomeChannel": { "type": "string" },
        "rulesChannel": { "type": "string" },
        "verificationRole": { "type": "string" },
        "staffRoleId": { 
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "memberRoleId": { "type": "string" },
        "forbiddenRoleIds": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Array of role IDs that can be assigned temporarily via vote"
        }
      },
      "additionalProperties": true
    },
    "entryModal": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "customId": { "type": "string" },
              "label": { "type": "string" },
              "style": { "type": "string", "enum": ["Short", "Paragraph"] },
              "required": { "type": "boolean" },
              "placeholder": { "type": "string" }
            },
            "required": ["customId", "label", "style", "required"]
          }
        }
      },
      "additionalProperties": false
    },
    "modmail": {
      "type": "object",
      "properties": {
        "modmailCategory": { "type": "string" },
        "modmailLogs": { "type": "string" },
        "categoryId": { "type": "string" },
        "staffRoleIds": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "tickets": {
      "type": "object",
      "properties": {
        "ticketCategory": { "type": "string" },
        "supportRole": { "type": "string" },
        "ticketLogs": { "type": "string" },
        "ticketCategoryId": { "type": "string" },
        "acceptedEntryCategoryId": { "type": "string" }
      },
      "additionalProperties": true
    },
    "logging": {
      "type": "object",
      "properties": {
        "modLogs": { "type": "string" },
        "messageLogs": { "type": "string" },
        "voiceLogs": { "type": "string" },
        "memberLogs": { "type": "string" },
        "logChannelId": { "type": "string" },
        "messageLogChannelId": { "type": "string" },
        "voiceLogChannelId": { "type": "string" },
        "roleLogChannelId": { "type": "string" },
        "roleLogs": { "type": "string" },
        "moderationWebhookUrl": { "type": "string" },
        "messagesWebhookUrl": { "type": "string" },
        "rolesWebhookUrl": { "type": "string" },
        "voiceWebhookUrl": { "type": "string" },
        "ticketsWebhookUrl": { "type": "string" },
        "memberWebhookUrl": { "type": "string" },
        "excludedChannels": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Channels to exclude from logging"
        },
        "excludedRoles": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Roles to exclude from logging"
        },
        "excludedUsers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Users to exclude from logging"
        },
        "roleLogsExcludedRoles": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Roles to exclude from role logging specifically"
        }
      },
      "additionalProperties": true
    },
    "welcome": {
      "type": "object",
      "properties": {
        "welcomeMessage": { "type": "string" },
        "rulesMessage": { "type": "string" },
        "welcomeDM": { "type": "string" },
        "welcomeChannels": {
          "type": "object",
          "properties": {
            "welcomeChannelId": { "type": "string" },
            "logChannelId": { "type": "string" },
            "deleteAfter": { "type": "number" },
            "welcomeMessage": { "type": "string" }
          }
        }
      },
      "additionalProperties": true
    },
    "confession": {
      "type": "object",
      "properties": {
        "confessionChannel": { "type": "string" },
        "logsChannel": { "type": "string" },
        "logsEnabled": { "type": "boolean" },
        "confessionRole": { "type": "string" },
        "confessionChannelId": { "type": "string" }
      },
      "additionalProperties": true
    },
    "games": {
      "type": "object",
      "properties": {
        "gameChannel": { "type": "string" },
        "dailyQuizChannel": { "type": "string" },
        "gameLeaderboard": { "type": "string" },
        "dailyQuizChannelId": { "type": "string" },
        "quizChannelId": { "type": "string" }
      },
      "additionalProperties": true
    },
    "kink": {
      "type": "object",
      "properties": {
        "nsfwChannel": { "type": "string" },
        "kinkLevels": { "type": "boolean" },
        "kinkLogs": { "type": "string" }
      },
      "additionalProperties": true
    },
    "economy": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "voiceActivity": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "pointsPerMinute": { "type": "number", "minimum": 0, "maximum": 10 },
            "requireUnmuted": { "type": "boolean" },
            "requireInChannel": { "type": "boolean" },
            "maxPointsPerHour": { "type": "number", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "messageActivity": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "pointsPerReward": { "type": "number", "minimum": 1 },
            "messagesRequired": { "type": "number", "minimum": 1 },
            "minimumWordCount": { "type": "number", "minimum": 0 },
            "cooldownMinutes": { "type": "number", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "dailyQuiz": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "pointsPerCorrectAnswer": { "type": "number", "minimum": 0 },
            "maxPointsPerDay": { "type": "number", "minimum": 0 },
            "hour": { "type": "number", "minimum": 0, "maximum": 23 },
            "minute": { "type": "number", "minimum": 0, "maximum": 59 }
          },
          "additionalProperties": false
        },
        "games": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "baseRewards": {
              "type": "object",
              "properties": {
                "quiz": {
                  "type": "object",
                  "properties": {
                    "excellent": { "type": "number", "minimum": 0 },
                    "good": { "type": "number", "minimum": 0 },
                    "passing": { "type": "number", "minimum": 0 }
                  }
                },
                "memory": {
                  "type": "object",
                  "properties": {
                    "basePoints": { "type": "array", "items": { "type": "number", "minimum": 0 } },
                    "speedBonuses": { "type": "array", "items": { "type": "number", "minimum": 0 } }
                  }
                },
                "wordMystery": {
                  "type": "object",
                  "properties": {
                    "basePoints": { "type": "number", "minimum": 0 },
                    "bonusPerRemainingHint": { "type": "number", "minimum": 0 }
                  }
                },
                "anagram": {
                  "type": "object",
                  "properties": {
                    "basePoints": { "type": "number", "minimum": 0 },
                    "bonusPerSpeed": { "type": "number", "minimum": 0 }
                  }
                },
                "guessNumber": {
                  "type": "object",
                  "properties": {
                    "basePoints": { "type": "number", "minimum": 0 },
                    "bonusPerAttempt": { "type": "number", "minimum": 0 }
                  }
                },
                "blackjack": {
                  "type": "object",
                  "properties": {
                    "winPoints": { "type": "number", "minimum": 0 },
                    "drawPoints": { "type": "number", "minimum": 0 }
                  }
                },
                "coinFlip": {
                  "type": "object",
                  "properties": {
                    "winPoints": { "type": "number", "minimum": 0 }
                  }
                }
              },
              "additionalProperties": false
            },
            "difficultyMultipliers": {
              "type": "object",
              "properties": {
                "easy": { "type": "number", "minimum": 0, "maximum": 5 },
                "normal": { "type": "number", "minimum": 0, "maximum": 5 },
                "difficult": { "type": "number", "minimum": 0, "maximum": 5 },
                "expert": { "type": "number", "minimum": 0, "maximum": 5 }
              },
              "additionalProperties": false
            },
            "bettingSystem": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "minimumBet": { "type": "number", "minimum": 1 },
                "maximumBet": { "type": "number", "minimum": 1 },
                "winMultiplier": { "type": "number", "minimum": 1 }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "quests": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "dailyRewards": { "type": "array", "items": { "type": "number", "minimum": 0 } },
            "weeklyRewards": { "type": "array", "items": { "type": "number", "minimum": 0 } },
            "maxQuestsPerDay": { "type": "number", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "limits": {
          "type": "object",
          "properties": {
            "maxPointsPerDay": { "type": "number", "minimum": 0 },
            "maxPointsPerHour": { "type": "number", "minimum": 0 },
            "dailyResetHour": { "type": "number", "minimum": 0, "maximum": 23 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
